<header class="header">
  <div>
    {{> logo}}
  </div>

  <nav class="header_nav">
    <div class="header_nav_right">
      {{> nav list=header}}
    </div>
  </nav>
</header>


<div class="info">
  {{#with info}}
  <div class="info_content">
    <h1 class="info_title">{{title}}</h1>
    <p class="info_description">{{description}}</p>
  </div>
  {{/with}}


  {{#with form}}
  <form class="form">
    <div class="form_input_list">
      {{#each inputs}}
      <input type="{{type}}" placeholder="{{placeholder}}" class="form_input" name="{{name}}" id="form-input-{{id}}">
      {{/each}}
    </div>

    <div class="form_checkbox">
      <input type="checkbox" name="{{checkbox.name}}" id="{{checkbox.name}}">
      <div></div>
      <label for="{{checkbox.name}}">{{checkbox.label}}</label>
    </div>

    <button type="submit" class="form_button">{{button}}</button>
    <p class="form_info">{{info}}</p>
  </form>
  {{/with}}
</div>



<div class="updates">
  {{#with updates}}
  <h1 class="updates_title">{{title}}</h1>
  {{#each list}}
  <div class="list">
    <img
      src="https://media.istockphoto.com/id/1433543800/uk/%D1%84%D0%BE%D1%82%D0%BE/%D0%BA%D0%BE%D0%BD%D1%86%D0%B5%D0%BF%D1%86%D1%96%D1%8F-%D0%BD%D0%BE%D0%B2%D0%BE%D1%97-%D1%96%D0%B4%D0%B5%D1%97.jpg?s=612x612&w=0&k=20&c=PUkcQdsmqREUvgr1dE-eiuJ9G-pgjXxf48IOs3WCTuk="
      alt="#" class="list_img">
    <div class="list_text">
      <strong class="list_nickname">{{nickname}}</strong>
      <p class="list_description">{{description}}</p>
    </div>
  </div>

  {{/each}}

  {{#with show_all}}
  <a href="{{url}}" class="show_all">{{text}}</a>
  {{/with}}
  {{/with}}
</div>

{{#with expirience}}
<div class="expirience">
  <h1 class="exp_title">{{title}}</h1>
  <div class="expiri">
    <div class="exp_badge">{{badge}}</div>
  </div>
</div>
<div class="ex_list">
  {{#each list}}
  <div class="ex_name">
    <div class="ex_list_name">{{name}}</div>
    <div class="ex_list_details">{{details}}</div>
  </div>
  {{/each}}
</div>
{{/with}}

<footer class="footer">
  <div>
    {{> logo}}
    <span class="footer_copyright ">Copyright 2023-2024</span>
  </div>
  {{#each footer}}
  <div>
    <span class="footer_title">{{title}}</span>
    {{> nav list=links isVertical=true}}
  </div>
  {{/each}}
</footer>
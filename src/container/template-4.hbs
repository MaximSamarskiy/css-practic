<header class="header">
  <div>
    {{> logo}}
  </div>

  <nav class="header_nav">
    <div class="header_nav_right">
      {{> nav list=header}}
    </div>
  </nav>
</header>

{{#with main}}
<div class="main">
  <div class="main_content">
    <h1 class="main_heading">{{heading}}</h1>
    <p class="main_descriotion">{{descriotion}}</p>
    <a href="{{href}}" class="main_button">{{button}}</a>
  </div>
  <img src="{{image}}" alt="Main image" class="main_image">

</div>
{{/with}}


<div class="featured">
  {{#each featured}}
  {{> cardFeatured data=this}}
  {{/each}}
</div>

<div class="actions">
  {{#each actions}}
  <div class="form_featured">
    <div class="actions_heading">{{heading}}</div>
    <a href="{{url}}" class="action_button">{{text}}</a>
  </div>
  {{/each}}
</div>


<footer class="row footer">
  <div>
    {{> logo}}
    <span class="footer_copyright ">Copyright 2023-2024</span>
  </div>
  {{#each footer}}
  <div>
    <span class="footer_title">{{title}}</span>
    {{> nav list=links isVertical=true}}
  </div>
  {{/each}}
</footer>